<%= simple_form_for(@van) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :plate_number %>
      <%= f.input :vin %>
      <%= f.input :make %>
      <%= f.input :model_year %>
      <%= f.input :last_oil_change %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
