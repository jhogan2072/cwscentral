<body ng-app="app" ng-controller="ContactController as ctrl">
<%= render "shared/navbar", input_name: "ctrl.searchInput" %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 main">
      <%= render "shared/alert_msg" %>
      <h2 class="sub-header">Contacts
        <button class="btn-file btn btn-primary" name="export">Export</button>
      </h2>
      <div class="table-responsive" ng-style="ctrl.truncateStyle">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Organization</th>
            <th>Title</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Office Phone</th>
            <th>Fax</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
            <tr ng-repeat="contact in ctrl.contacts | filter:ctrl.searchInput">
              <td>{{ contact.name }}</td>
              <td>{{ contact.organization_name }}</td>
              <td>{{ contact.title }}</td>
              <td>{{ contact.email }}</td>
              <td>{{ contact.mobile }}</td>
              <td>{{ contact.office_phone }}</td>
              <td>{{ contact.fax }}</td>
              <td><a target="_self" ng-href="/contacts/{{contact.id}}/edit">Edit</a></td>
              <td><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/contacts/{{contact.id}}">Delete</a></td>
            </tr>
          </tbody>
        </table>
        <%= link_to 'New Contact', new_contact_path, class: "btn btn-primary", target: "_self" %>
      </div>
    </div>
  </div>
</div>
</body>
