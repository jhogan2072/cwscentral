<body ng-app="app" ng-controller="OrgController as ctrl">
<%= render "shared/navbar", input_name: "ctrl.searchInput" %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-12 main">
      <%= render "shared/alert_msg" %>
      <h2 class="sub-header">Organizations
        <button class="btn-file btn btn-primary" name="export">Export</button>
      </h2>
      <div class="table-responsive" ng-style="ctrl.truncateStyle">
        <table class="table table-striped">
          <thead>
          <tr>
            <th>Name</th>
            <th>Billing Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Sponsor Since</th>
            <th colspan="3"></th>
          </tr>
          </thead>

          <tbody>
          <tr ng-repeat="organization in ctrl.organizations| filter:ctrl.searchInput">
            <td>{{ organization.name }}</td>
            <td>{{ organization.billing_address }}</td>
            <td>{{ organization.city }}</td>
            <td>{{ organization.state }}</td>
            <td>{{ organization.zip }}</td>
            <td>{{ organization.sponsor_since }}</td>
            <td><a target="_self" ng-href="/organizations/{{organization.id}}/edit">Edit</a></td>
            <td>
              <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/organizations/{{organization.id}}">Delete</a>
            </td>
          </tr>
          </tbody>
        </table>
        <%= link_to 'New Organization', new_organization_path, class: "btn btn-primary", target: "_self" %>
      </div>
    </div>
  </div>
</div>
</body>